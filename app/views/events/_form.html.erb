<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, "Titre" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :start_date, "Date de début" %>
    <%= form.datetime_select :start_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :duration, "Durée" %>
    <%= form.number_field :duration, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price, "Prix" %>
    <%= form.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :location, "Emplacement" %>
    <%= form.text_field :location, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Valider", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
